<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cancel_reason_form" model="ir.ui.view">
       <field name="name">cancel.reason.form</field>
       <field name="model">work.order.cancel.reason</field>
       <field name="arch" type="xml">
           <form>
               <group>
                   <field name="work_order_id" invisible="1"/>
                   <field name="reason" placeholder="Enter reason for cancellation..."/>
               </group>
               <footer>
                   <button string="Confirm" type="object" class="oe_highlight" name="action_confirm_cancel"/>
                   <button string="Cancel" class="oe_link" special="cancel"/>
               </footer>
           </form>
       </field>
   </record>
</odoo>
