<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_work_order_form" model="ir.ui.view">
        <field name="name">work.order.form</field>
        <field name="model">work.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start_work" string="Start Work" type="object" states="pending" class="btn-primary"/>
                    <button name="action_end_work" string="End Work" type="object" states="in_progress" class="btn-primary"/>
                    <button name="action_reset" string="Reset" type="object" states="in_progress" class="btn-secondary"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-danger"/>
                    <button name="%(action_report_work_order)d" string="Print" type="action" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="team"/>
                        <field name="team_leader"/>
                        <field name="team_members" widget="many2many_tags"/>
                        <field name="planned_start"/>
                        <field name="planned_end"/>
                        <field name="state"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_work_order" model="ir.actions.act_window">
        <field name="name">Work Order</field>
        <field name="res_model">work.order</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>


