<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_check_team_availability" string="Check" type="object" class="btn-primary"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_booking_order"/>
                <field name="team"/>
                <field name="team_leader" readonly="1"/>
                <field name="team_members" widget="many2many_tags" readonly="1"/>
                <field name="booking_start"/>
                <field name="booking_end"/>
            </xpath>
        </field>
    </record>
    <record id="action_booking_order" model="ir.actions.act_window">
        <field name="name">Booking Order</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_booking_order': True}</field>
        <field name="domain">[('is_booking_order', '=', True)]</field>
    </record>
</odoo>

